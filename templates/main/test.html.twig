{% extends 'base.html.twig' %}

{% block body %}
    <h1>Test</h1>
    <div>

        <div>{{ "now"|date('Y') }}</div>


        {# Crée une variable #}
        {% set name = 'Edward' %}
        <h2>{{ name|length }}</h2>

        {# Crée un tableau #}
        {% set colors = ["orange", "brown", "blue", "yellow"] %}

        <div>Nombre de couleurs : {{ colors|length }}</div>
        <div>{{ colors|join(' /') }}</div>
        {% for color in colors %}
            <div>{{ loop.index-1 }}</div>
            <div style="background-color: {{ color }}">{{ color }}</div>
        {% endfor %}


        {# Crée un objet #}
        {%  set book = {title: "Pifpaf", yean: 2000, author: 'John Doe'} %}
        <h3>{{ book.author }}</h3>
        <div>
            {% for key, value in book %}
                <div>{{ key }} : {{ value }}</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% block title %}{{ parent()}} | Test{% endblock %}
